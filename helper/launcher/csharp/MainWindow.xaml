<Window x:Class="ShippingManagerCoPilot.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShippingManager CoPilot"
        Width="500" Height="480"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="CanMinimize"
        Icon="icon.ico">

    <Window.Resources>
        <!-- Colors matching launcher-dialogs.css -->
        <SolidColorBrush x:Key="BgPrimary" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#252525"/>
        <SolidColorBrush x:Key="BgHover" Color="#3a3a3a"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9ca3af"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3b82f6"/>
        <SolidColorBrush x:Key="InfoDark" Color="#2563eb"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#22c55e"/>
        <SolidColorBrush x:Key="DangerColor" Color="#dc2626"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock x:Name="TitleText"
                       Text="Server Ready!"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource InfoColor}"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="ServerCountText"
                       Text="0 server(s) running"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondary}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
            <TextBlock x:Name="UserdataPathText"
                       Text=""
                       FontSize="11"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"
                       MaxWidth="460"/>
        </StackPanel>

        <!-- Session List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="SessionsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BgSecondary}"
                                CornerRadius="6"
                                Padding="12,12,16,12"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="SessionItem_Click"
                                Tag="{Binding UserId}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Icon}"
                                           Foreground="{Binding IconColor}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CompanyName}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="{Binding Url}"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondary}"
                                               FontFamily="Consolas"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Autostart Toggle -->
                                    <Button Content="{Binding AutostartText}"
                                            Tag="{Binding UserId}"
                                            Click="ToggleAutostart_Click"
                                            ToolTip="{Binding AutostartTooltip}"
                                            Margin="0,0,8,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource BgHover}"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="4"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Refresh Button -->
                                    <Button Content="&#8635;"
                                            Tag="{Binding UserId}"
                                            Click="RefreshSession_Click"
                                            ToolTip="Refresh session"
                                            FontSize="14"
                                            Margin="0,0,8,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource BgHover}"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="4"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource InfoColor}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource InfoColor}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Content="&#128465;"
                                            Tag="{Binding UserId}"
                                            Click="DeleteSession_Click"
                                            ToolTip="Remove account"
                                            FontSize="14">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource BgHover}"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="4"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource DangerColor}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource DangerColor}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="+ Add Account"
                    Click="AddAccount_Click"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource InfoColor}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource InfoDark}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Open All in Browser"
                    Click="OpenAll_Click"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BgHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Minimize to Tray"
                    Click="Minimize_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BgHover}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
